FROM node:alpine AS build
WORKDIR /app
COPY package*.json .
ENV NODE_ENV=production
RUN npm i
COPY . .
RUN npm run build

FROM node:alpine
# Установка curl
RUN apk add --no-cache curl

WORKDIR /app
COPY package*.json .
RUN npm i --only=production
COPY --from=build /app/dist/ /app/dist/
EXPOSE 3000
CMD [ "node", "dist/index.js" ]

