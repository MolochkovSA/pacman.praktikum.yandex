    "moduleResolution": "NodeNext",
    "composite": true,
    "target": "ESNext",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2019", "DOM"],
    "rootDir": "server",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.server.tsbuildinfo"
  },
  "include": ["server/index.ts"]
}
