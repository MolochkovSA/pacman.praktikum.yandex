{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "ignoreFiles": [
    "node_modules/**/*",
    "src/style.css"
  ],
  "rules": {
    "alpha-value-notation": null,
    "color-function-notation": "legacy",
    "color-no-invalid-hex": true,
    "block-no-empty": true,
    "rule-empty-line-before": ["always", {
      "except": ["first-nested"]
    }],
    "scss/dollar-variable-empty-line-before": "always",
    "value-keyword-case": [
      "lower",
      {
        "ignoreKeywords": ["/.+/"]
      }
    ]
  }
}
